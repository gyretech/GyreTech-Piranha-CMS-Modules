{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./built/",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015","dom"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "*.d.ts",
    "../../typings",
    "node_modules"
  ]
}
